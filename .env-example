DEVICE_TO_AGENTS_JSON={"STUDY":["pc-study","nas-thecus"],"Meterkast":["pc-meterkast"]}

# Agent identity
AGENT_ID=pc-study

# Agent commands (run in order)
PRE_SHUTDOWN_CMD_1="microk8s stop"
# PRE_SHUTDOWN_CMD_2="systemctl stop something"
SHUTDOWN_CMD="shutdown -h now"

