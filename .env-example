# MQTT
MQTT_HOST=mosquitto
MQTT_PORT=1883
MQTT_USER=
MQTT_PASS=

# EcoFlow base
ECOFLOW_BASE=bridge-ecoflow

# Policy
POLICY_SOC_MIN=20
POLICY_DEBOUNCE_SEC=60
POLICY_COOLDOWN_SEC=600

# Mapping (simple JSON string to avoid extra files for now)
